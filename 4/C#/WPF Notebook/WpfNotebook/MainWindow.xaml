<Window x:Class="WpfNotebook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNotebook"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Aqua">
    <Grid >
        <Button Content="Button" HorizontalAlignment="Left" Margin="99,81,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="GreenYellow" Offset="0"/>
                    <GradientStop Color="#FFAE7474" Offset="0.539"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Calendar HorizontalAlignment="Left" Margin="121,189,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>