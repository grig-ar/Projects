@page "{id:int?}"
@model Lab4.Pages.Workers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Worker details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Worker.FullName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Worker.FullName)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Project Name</th>
                    <th>Award</th>
                </tr>
                @foreach (var item in Model.Worker.Projects)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Award)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Worker.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
